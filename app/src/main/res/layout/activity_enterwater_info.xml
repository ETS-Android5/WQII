<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterwaterInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="90dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/enterdetails"
                android:textStyle="bold"
                android:textSize="40dp"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:text="Enter the available water details"
                android:layout_height="wrap_content">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="TEMPERATURE\n(Â°C)"
                        android:maxLines="2"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="10dp">
                    </Space>
                    <EditText
                        android:id="@+id/entertemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:inputType="numberSigned|numberDecimal"
                        android:textSize="20dp"/>


                    </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dissolvedoxygen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:text="Dissolved Oxygen\n(mg/L) &gt;5.0 mg/L"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="10dp">

                    </Space>

                    <EditText
                        android:id="@+id/enterdissolvedoxygen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="20dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="pH\n(6.5 - 8.5)"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="10dp">

                    </Space>

                    <EditText
                        android:id="@+id/enterpH"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="20dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Conductivity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Conductivity\n(umho/Cm)"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="10dp">

                    </Space>

                    <EditText
                        android:id="@+id/enterConductivity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="20dp"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Biochemoxygen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:text="Bio-Chemical Oxygen\nDemand(mg/L)\n&lt;3.0 mg/L"

                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="10dp">

                    </Space>

                    <EditText
                        android:id="@+id/enterbiochemoxygen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:inputType="numberDecimal"
                        android:gravity="center"
                        android:textSize="20dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Nitrate"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:gravity="center"
                        android:text="Nitrate\n(mg/L)"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="10dp">

                    </Space>

                    <EditText
                        android:id="@+id/enterNitrate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="20dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Facealcoliform"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Faceal Coliform\n(MPN/100mL)\n&lt;2500 MPN/ 100mL"

                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="10dp">

                    </Space>
                    <EditText
                        android:id="@+id/enterFacealColiform"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="20dp"/>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/waterinfo"
                android:visibility="gone">
                <TextView
                    android:id="@+id/avilableusage"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:text="Select/Search the location from the available list"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/avilablesol"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:text="Select/Search the location from the available list"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:backgroundTint="#0091EA"
                app:cardCornerRadius="25dp"
                android:id="@+id/next"
                android:layout_margin="18dp"
                android:clickable="true"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/nexttext"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:text="Enter Details">

                </TextView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>